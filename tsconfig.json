{
	"compilerOptions": {
		"declaration": true,
		"strict": true,
		"alwaysStrict": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "ES2018",
		"module": "CommonJS",
		"moduleResolution": "node",
		"types": ["node", "jest"]
	},
	"exclude": ["**/node_modules/*", "node_modules", "**/*.test.ts", "**/lib/*"]
}