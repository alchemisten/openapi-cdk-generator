{
	"compilerOptions": {
		"declaration": true,
		"strict": true,
		"alwaysStrict": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": ".",
		"outDir": "./lib",
		"target": "ES2018",
		"module": "CommonJS",
		"moduleResolution": "node",
		"types": ["node"],
	},
	"include": ["./src"],
	"exclude": ["node_modules"]
}
